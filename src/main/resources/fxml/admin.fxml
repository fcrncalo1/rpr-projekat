<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="400.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controllers.AdminController">
    <stylesheets>
        <URL value="@../css/admin.css" />
    </stylesheets>
    <top>
      <HBox prefHeight="56.0" prefWidth="600.0" style="-fx-background-color: #501B1D;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" prefHeight="56.0" prefWidth="150.0" styleClass="menuButton" text="Dashboard" HBox.hgrow="SOMETIMES" />
            <Button mnemonicParsing="false" prefHeight="56.0" prefWidth="150.0" styleClass="menuButton" text="Guest Management" HBox.hgrow="SOMETIMES" />
            <Button mnemonicParsing="false" prefHeight="56.0" prefWidth="150.0" styleClass="menuButton" text="Product Management" HBox.hgrow="SOMETIMES" />
            <Button mnemonicParsing="false" prefHeight="56.0" prefWidth="150.0" styleClass="menuButton" text="Order Management" HBox.hgrow="SOMETIMES" />
            <Button mnemonicParsing="false" onAction="#logoutClick" prefHeight="56.0" prefWidth="150.0" styleClass="menuButton" text="Logout" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <GridPane style="-fx-background-color: #83677B;" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </center>
</BorderPane>
